    <script>
        function showPopup(type) {
            if (type === 'qris') {
                document.getElementById("popupOverlay").style.display = "block";
            }
        }

        function closePopup() {
            document.getElementById("popupOverlay").style.display = "none";
        }

        function redirectTo(url) {
            window.location.href = url;
        }
    </script>

